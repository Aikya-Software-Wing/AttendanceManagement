@model AttendanceManagement.ViewModel.AttendanceViewModel


@{
    ViewBag.Title = "Add Attendance";
    var students = Model.Students;
    var teacher = Model.TeacherId;
    var Date = Model.Date;
    var Slot = Model.Slot;
}
<h2></h2>
<h2>Select the Students</h2>
<h3>@teacher</h3>
<h3>@Date</h3>
<h3>@Slot</h3>

@using (Html.BeginForm("AddAttendance", "ManageAttendance"))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr></tr>
        <tr>
            <th>
                @Html.DisplayName("USN")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Check")
            </th>

        </tr>
        @foreach (var student in students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => student.USN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.Name)
                </td>
                <td>
                    @Html.CheckBox("isPresent", true)
                </td>
            </tr>
        }
    </table>    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Attendance" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
